#!/usr/bin/env bash
#
# Run all installers


function main() {
    set -e 
    cd "$(dirname "$0")"/..

    # Find all installers and run them iteratively
    find . -name install.sh | 
        while read -r installer ; do 
            # Ask the user if they want this installer run
            local char
            echo
            echo "Found installer: $installer"
            echo "Press RETURN to run or any other key to skip"
            read -rsN1 char </dev/tty
            echo 
            if ! [[ "$char" == $'\n' || "$char" == $'\r' ]]
            then
                echo "Skipped $installer"
                continue
            fi
            # If it wasn't skipped, run the installer
            sh -c "${installer}"
        done
}

main "$@"