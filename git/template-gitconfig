[alias]
    branches = !sh git-branch-descriptions
    unstage = restore --staged
    discard = checkout --
    discard-untracked = clean
    desc = branch --edit-description

[apply]
    whitespace = nowarn

[color]
    diff = auto
    status = auto
    branch = auto
    ui = true

[core]
    editor = nvim

[credential]
    helper = GIT_CREDENTIAL_HELPER

[delta]
    features = decorations
    line-numbers = true
    side-by-side = true

[delta "interactive"]
    keep-plus-minus-markers = false

[diff]
    tool = nvimdiff

[difftool]
    prompt = false

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[interactive]
    diffFilter = delta --color-only --features=interactive

[mergetool]
    keepBackup = false

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[push]
    default = simple

[user]
    name = AUTHORNAME
    email = AUTHOREMAIL
