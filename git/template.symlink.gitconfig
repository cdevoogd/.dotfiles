[user]
    name = AUTHORNAME
    email = AUTHOREMAIL
[credential]
    helper = GIT_CREDENTIAL_HELPER
[alias]
    switch = checkout
    unstage = restore --unstaged
    discard = checkout --
    discard-untracked = clean
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[core]
    editor = nvim
[apply]
    whitespace = nowarn
[mergetool]
    keepBackup = false
[difftool]
    prompt = false
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[help]
    autocorrect = 1
[push]
    default = simple
