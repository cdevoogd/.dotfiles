[include]
    path = author.gitconfig

[alias]
    unstage = restore --staged
    desc = branch --edit-description
    sm = submodule

[core]
    editor = nvim

[diff]
    tool = nvimdiff

[difftool]
    prompt = false

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[mergetool]
    keepBackup = false
